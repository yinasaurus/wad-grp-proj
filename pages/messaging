    <div id="app">
        <div class="container messaging-container">
            <div class="messaging-wrapper">
                <!-- Conversations Sidebar -->
                <div class="conversations-sidebar" :class="{'hidden': showChat}">
                    <div class="conversations-header">
                        <h3><i class="fas fa-comments me-2"></i>Messages</h3>
                        <div class="search-box">
                            <input 
                                type="text" 
                                class="form-control" 
                                placeholder="Search conversations..."
                                v-model="searchQuery"
                            >
                        </div>
                    </div>
                    
                    <div class="conversations-list">
                        <div 
                            v-for="conv in filteredConversations" 
                            :key="conv.id"
                            class="conversation-item"
                            :class="{'active': selectedConversation && selectedConversation.id === conv.id}"
                            @click="selectConversation(conv)"
                        >
                            <div class="conversation-avatar">
                                {{ conv.businessName.charAt(0) }}
                            </div>
                            <div class="conversation-content">
                                <div class="conversation-top">
                                    <span class="conversation-name">{{ conv.businessName }}</span>
                                    <span class="conversation-time">{{ conv.lastMessageTime }}</span>
                                </div>
                                <div class="conversation-preview">
                                    <span v-if="conv.unread" class="unread-badge">{{ conv.unread }}</span>
                                    {{ conv.lastMessage }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Chat Area -->
                <div class="chat-area" :class="{'mobile-show': showChat}">
                    <div v-if="!selectedConversation" class="empty-state">
                        <i class="fas fa-comments"></i>
                        <h3>Select a conversation</h3>
                        <p>Choose a business from the list to start messaging</p>
                    </div>

                    <template v-else>
                        <!-- Chat Header -->
                        <div class="chat-header">
                            <div class="chat-header-left">
                                <button class="btn btn-sm d-md-none" @click="backToList">
                                    <i class="fas fa-arrow-left"></i>
                                </button>
                                <div class="chat-avatar">
                                    {{ selectedConversation.businessName.charAt(0) }}
                                </div>
                                <div class="chat-info">
                                    <h4>{{ selectedConversation.businessName }}</h4>
                                    <span class="status" :class="{'online': selectedConversation.online}">
                                        {{ selectedConversation.online ? 'Online' : 'Offline' }}
                                    </span>
                                </div>
                            </div>
                            <div class="chat-actions">
                                <button title="View Business Profile">
                                    <i class="fas fa-info-circle"></i>
                                </button>
                                <button title="More Options">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Messages Container -->
                        <div class="messages-container" ref="messagesContainer">
                            <div v-for="(group, date) in groupedMessages" :key="date">
                                <div class="message-date">
                                    <span>{{ date }}</span>
                                </div>
                                
                                <div v-for="msg in group" :key="msg.id" class="message" :class="msg.sent ? 'sent' : 'received'">
                                    <div class="message-bubble">
                                        <div v-if="msg.inquiry" class="product-inquiry">
                                            <div class="product-inquiry-header">
                                                <i class="fas fa-box"></i>
                                                <span class="product-inquiry-title">Product Inquiry</span>
                                            </div>
                                            <div><strong>Product:</strong> {{ msg.inquiry.product }}</div>
                                            <div><strong>Question:</strong> {{ msg.inquiry.question }}</div>
                                        </div>
                                        <div class="message-text">{{ msg.text }}</div>
                                        <div class="message-time">{{ msg.time }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Message Input -->
                        <div class="message-input-area">
                            <div class="message-input-wrapper">
                                <div class="input-actions">
                                    <button title="Attach file">
                                        <i class="fas fa-paperclip"></i>
                                    </button>
                                    <button title="Add emoji">
                                        <i class="fas fa-smile"></i>
                                    </button>
                                </div>
                                <textarea 
                                    class="message-input" 
                                    placeholder="Type your message..."
                                    v-model="newMessage"
                                    @keydown.enter.prevent="sendMessage"
                                    rows="1"
                                ></textarea>
                                <button 
                                    class="send-button" 
                                    @click="sendMessage"
                                    :disabled="!newMessage.trim()"
                                    title="Send message"
                                >
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                        </div>
                    </template>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script>
        const { createApp } = Vue;

        createApp({
            data() {
                return {
                    searchQuery: '',
                    selectedConversation: null,
                    newMessage: '',
                    showChat: false,
                    conversations: [
                        {
                            id: 1,
                            businessName: 'EcoTech Solutions',
                            lastMessage: 'Thank you for your interest in our solar panels!',
                            lastMessageTime: '10:30 AM',
                            unread: 2,
                            online: true,
                            messages: [
                                {
                                    id: 1,
                                    text: 'Hello! I\'m interested in your solar panel installation services.',
                                    sent: true,
                                    time: '10:15 AM',
                                    date: 'Today',
                                    inquiry: {
                                        product: 'Solar Panel Installation',
                                        question: 'What is the estimated cost for a 5kW system?'
                                    }
                                },
                                {
                                    id: 2,
                                    text: 'Hello! Thank you for reaching out. I\'d be happy to help you with that.',
                                    sent: false,
                                    time: '10:20 AM',
                                    date: 'Today'
                                },
                                {
                                    id: 3,
                                    text: 'For a 5kW residential system, the cost typically ranges from $12,000 to $15,000, including installation.',
                                    sent: false,
                                    time: '10:21 AM',
                                    date: 'Today'
                                },
                                {
                                    id: 4,
                                    text: 'That sounds reasonable. What kind of warranty do you offer?',
                                    sent: true,
                                    time: '10:25 AM',
                                    date: 'Today'
                                },
                                {
                                    id: 5,
                                    text: 'Thank you for your interest in our solar panels!',
                                    sent: false,
                                    time: '10:30 AM',
                                    date: 'Today'
                                }
                            ]
                        },
                        {
                            id: 2,
                            businessName: 'Green Harvest Café',
                            lastMessage: 'Our catering menu is available for download',
                            lastMessageTime: 'Yesterday',
                            unread: 0,
                            online: false,
                            messages: [
                                {
                                    id: 1,
                                    text: 'Do you provide catering services for corporate events?',
                                    sent: true,
                                    time: '2:30 PM',
                                    date: 'Yesterday'
                                },
                                {
                                    id: 2,
                                    text: 'Yes, we do! We specialize in organic, plant-based catering.',
                                    sent: false,
                                    time: '2:45 PM',
                                    date: 'Yesterday'
                                },
                                {
                                    id: 3,
                                    text: 'Our catering menu is available for download',
                                    sent: false,
                                    time: '2:46 PM',
                                    date: 'Yesterday'
                                }
                            ]
                        },
                        {
                            id: 3,
                            businessName: 'Sustainable Fashion Co.',
                            lastMessage: 'Great! When would you like to visit our showroom?',
                            lastMessageTime: 'Oct 20',
                            unread: 0,
                            online: true,
                            messages: [
                                {
                                    id: 1,
                                    text: 'I\'m interested in your organic cotton clothing line',
                                    sent: true,
                                    time: '11:00 AM',
                                    date: 'Oct 20'
                                },
                                {
                                    id: 2,
                                    text: 'Wonderful! We have a great collection available.',
                                    sent: false,
                                    time: '11:15 AM',
                                    date: 'Oct 20'
                                },
                                {
                                    id: 3,
                                    text: 'Great! When would you like to visit our showroom?',
                                    sent: false,
                                    time: '11:16 AM',
                                    date: 'Oct 20'
                                }
                            ]
                        },
                        {
                            id: 4,
                            businessName: 'Pure Earth Cosmetics',
                            lastMessage: 'All our products are cruelty-free and vegan',
                            lastMessageTime: 'Oct 18',
                            unread: 1,
                            online: false,
                            messages: [
                                {
                                    id: 1,
                                    text: 'Do you have any products suitable for sensitive skin?',
                                    sent: true,
                                    time: '3:20 PM',
                                    date: 'Oct 18'
                                },
                                {
                                    id: 2,
                                    text: 'All our products are cruelty-free and vegan',
                                    sent: false,
                                    time: '3:35 PM',
                                    date: 'Oct 18'
                                }
                            ]
                        },
                        {
                            id: 5,
                            businessName: 'Urban Green Nursery',
                            lastMessage: 'We can schedule a delivery for this weekend',
                            lastMessageTime: 'Oct 15',
                            unread: 0,
                            online: true,
                            messages: [
                                {
                                    id: 1,
                                    text: 'I need help selecting plants for my balcony garden',
                                    sent: true,
                                    time: '9:00 AM',
                                    date: 'Oct 15'
                                },
                                {
                                    id: 2,
                                    text: 'We can schedule a delivery for this weekend',
                                    sent: false,
                                    time: '9:30 AM',
                                    date: 'Oct 15'
                                }
                            ]
                        }
                    ]
                };
            },
            computed: {
                filteredConversations() {
                    if (!this.searchQuery) return this.conversations;
                    return this.conversations.filter(conv => 
                        conv.businessName.toLowerCase().includes(this.searchQuery.toLowerCase())
                    );
                },
                groupedMessages() {
                    if (!this.selectedConversation) return {};
                    
                    const groups = {};
                    this.selectedConversation.messages.forEach(msg => {
                        if (!groups[msg.date]) {
                            groups[msg.date] = [];
                        }
                        groups[msg.date].push(msg);
                    });
                    return groups;
                }
            },
            methods: {
                selectConversation(conv) {
                    this.selectedConversation = conv;
                    conv.unread = 0;
                    this.showChat = true;
                    this.$nextTick(() => {
                        this.scrollToBottom();
                    });
                },
                backToList() {
                    this.showChat = false;
                },
                sendMessage() {
                    if (!this.newMessage.trim()) return;
                    
                    const newMsg = {
                        id: Date.now(),
                        text: this.newMessage,
                        sent: true,
                        time: new Date().toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' }),
                        date: 'Today'
                    };
                    
                    this.selectedConversation.messages.push(newMsg);
                    this.selectedConversation.lastMessage = this.newMessage;
                    this.selectedConversation.lastMessageTime = newMsg.time;
                    
                    this.newMessage = '';
                    
                    this.$nextTick(() => {
                        this.scrollToBottom();
                    });
                },
                scrollToBottom() {
                    const container = this.$refs.messagesContainer;
                    if (container) {
                        container.scrollTop = container.scrollHeight;
                    }
                }
            }
        }).mount('#app');
    </script>
</body>
</html>
